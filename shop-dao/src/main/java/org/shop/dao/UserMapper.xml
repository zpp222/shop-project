<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.shop.dao.UserDao">
    <select id="getStudent" resultType="User" parameterType="User">
        select * from user where name=#{name,jdbcType=VARCHAR} limit 0,1;
    </select>
    <insert id="save" parameterType="User">
    	insert into user(id,name,phone,sex,passwd) values(#{id,jdbcType=VARCHAR},#{name,jdbcType=VARCHAR},#{phone,jdbcType=VARCHAR},#{sex,jdbcType=VARCHAR},#{passwd,jdbcType=VARCHAR});
    </insert>
    <select id="getUserById" resultType="User" parameterType="User">
        select * from user where id=#{id,jdbcType=VARCHAR} limit 0,1;
    </select>
</mapper>